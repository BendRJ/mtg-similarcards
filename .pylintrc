[MASTER]
# Add the project root to the Python path
init-hook='import sys; sys.path.append(".")'

[TYPECHECK]
# Ignore missing member errors for psycopg types
# These are false positives due to psycopg's implementation
ignored-classes=psycopg.Connection,psycopg.Cursor
# Tell pylint these members exist even if it can't detect them dynamically
generated-members=commit,rollback,close,cursor,fetchone,fetchall,execute

[MESSAGES CONTROL]
# Disable specific warnings
# W1203: logging-fstring-interpolation - Allow f-strings in logging for readability
disable=logging-fstring-interpolation

[FORMAT]
# Maximum line length
max-line-length=140

[BASIC]
# Good variable names
good-names=i,j,k,e,ex,_,id,db,cur,conn

[DESIGN]
# Minimum number of public methods for a class
min-public-methods=0
